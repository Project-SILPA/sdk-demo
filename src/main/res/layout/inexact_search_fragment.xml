<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:inexactsearch="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/layout_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/HeaderTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/inexact_search_header_inexact_search_edittext" />

        <org.silpa.inexactsearch.InexactSearchEditText
            android:id="@+id/edtInexactSearch1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            inexactsearch:inexactSearchReferenceField="@+id/edtInexactSearch2"
            inexactsearch:inexactSearchReferenceString="mangalore" />

        <org.silpa.inexactsearch.InexactSearchEditText
            android:id="@+id/edtInexactSearch2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/inexact_search_header_inexact_search_textview" />

        <org.silpa.inexactsearch.InexactSearchTextView
            android:id="@+id/tvInexactSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inexact_search_textview_sample" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_margin="@dimen/layout_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/inexact_search_note" />
    </LinearLayout>
</ScrollView>