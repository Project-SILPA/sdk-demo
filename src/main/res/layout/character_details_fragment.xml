<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/layout_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/HeaderTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/character_details_header_chardetails_edittext" />

        <org.silpa.render.IndicEditText
            android:id="@+id/edtCharDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/character_details_header_chardetails_textview" />

        <org.silpa.render.IndicTextView
            android:id="@+id/tvCharDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/character_details_textview_sample" />

        <TextView
            style="@style/HeaderTextView"
            android:layout_margin="@dimen/layout_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/character_details_note" />
    </LinearLayout>
</ScrollView>